#include<stdio.h>
void getinput(int *a, int *b)
{
    printf("enter the value of 1st no.\n");
    scanf("%d",a);
    printf("enter the value of 2nd no.\n");
    scanf("%d",b);
}
void addtn(int a, int b,int*c)
{
    *c=a+b;
}
void getoutput(int a,int b,int c)
{
    printf("%d+%d=%d",a,b,c);
}
void main()
{
    int a,b,c;
    getinput(&a,&b);
    addtn(a,b,&c);
    getoutput(a,b,c);
}

