#include<stdio.h>
struct term
{
    int x;
    int y;
}a[n];
void get_input1(int *n);
{
    printf("enter the no. of terms\n");
    scanf("%d",n);
}
void get_input2(int n)
{
    printf("enter the terms\n");
    scanf("%d",n);
    for(int i=0;i<n;i++)
    scanf("%d/%d",&a[i].x,&a[i].y);
}
void add_frac(int n,int *nume, int *deno);
{   deno=a[0].y;
    nume=a[0].x;
    for(int i=0;i<n-1;i++)
    {   nume=nume*a[i+1].y+a[i+1].x*deno;
        deno=deno*a[i].y;
    }

        

