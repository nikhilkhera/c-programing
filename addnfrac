#include<stdio.h>
struct term
{
    int x;
    int y;
};
void get_input1(int *n);
{
    printf("enter the no. of terms\n");
    scanf("%d",n);
}
void get_input2(int n,struct term a[n])
{
    printf("enter the expression\n");
    scanf("%d",n);
    for(int i=0;i<n;i++)
    {
        scanf("%d/%d+",&a[i].x,&a[i].y);
    }
}
int find_gcd(int a,int b);
{
    while(a!=b)
    {
        if(a>b)
        a=a-b;
        if(a<b)
        b=b-a;
    }
    return a;
}
void add_frac(int n,int *nume, int *deno, struct term a[n]);
{   
    int cf;
    *deno=a[0].y;
    *nume=a[0].x;
    for(int i=0;i<n-1;i++)
    {   *nume=*nume*a[i+1].y+a[i+1].x*(*deno);
        *deno=*deno*a[i].y;
    }
    cf=find_gcd(*nume,*deno);
    *nume=*nume/cf;
    *deno=*deno/cf;
}
void get_output(int nume,int deno)
{
    printf("%d/%d",nume,deno);
}    
void main()
{
    int n,nume,deno;
    get_input1(&n);
    struct term a[n];
    get_input2(n,a);
    add_frac(n,&nume,&deno,a);
    get_output(nune,deno);
}



 

        

